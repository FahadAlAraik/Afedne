        <% if (err != '') { %>

            <div class="alert alert-danger text-right" role="alert" style ='width:70%;margin:auto;'>
                <strong>حصل خطأ!</strong> كلمة السر وتأكيد كلمة السر لا يتشابهان.
              </div>

            <% } %>


        <div class="row justify-content-center w-100 reverse" style="margin-top:150px;">

            <div class="col-4 text-center align-self-center align-items-center">

                <img src="../images/signup.png" alt="signin">

            </div>

            <div class="col-4 align-self-center text-right">
                <h1>التسجيل</h1>
                <form action="/signup" method="POST">
                    
                    <div class="form-group">
                        <br><br><label for="signin" style="margin-bottom:20px;font-size:20px;">الاسم الثنائي</label><br>
                        <input type="text" class="form-control" id="email" name="name" placeholder="الاسم الثنائي">
                      </div>

                    <div class="form-group">
                      <br><br><label for="signin" style="margin-bottom:20px;font-size:20px;">البريد الالكتروني</label><br>
                      <input type="email" class="form-control" id="email" name="email" placeholder="البريد الالكتروني">
                    </div><br>

                    <div class="form-group">
                      <label for="password" style="margin-bottom:20px;margin-top:20px;font-size:20px;">كلمة السر</label>
                      <input type="text" class="form-control" id="password" name="password" placeholder="كلمة السر">
                    </div><br>

                    <div class="form-group">
                        <label for="password" style="margin-bottom:20px;margin-top:20px;font-size:20px;">تأكيد كلمة السر</label>
                        <input type="text" class="form-control" id="password2" name="password2" placeholder="كلمة السر">
                      </div>

                    <br><br>
                    <button type="submit" class="btn btn-success">سجل</button>

                  </form>
            </div>



        </div>


        <br><br><br><br>

        <footer>
            <div class="col text-center">
              <h2>أَفِدْنِي</h2>
              <p style="font-weight:bold;">&copy; ۲۰۲۲</p>
            </div>
        </footer>

        <br>





